<Application x:Class="StudyingController.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:StudyingController.ViewModels"
             xmlns:v="clr-namespace:StudyingController.Views">
    <Application.Resources>
        <ResourceDictionary>
            
            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                <v:LoginView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MainViewModel}">
                <v:MainView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vm:UniversityStructureViewModel}">
                <v:UniversityStructureView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:UsersStructureViewModel}">
                <v:UsersStructureView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
