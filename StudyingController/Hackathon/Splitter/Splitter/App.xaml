<Application x:Class="Splitter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:vm="clr-namespace:Splitter.ViewModels"
             xmlns:v="clr-namespace:Splitter.Views"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <v:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:FakeViewModel}">
                <v:FakeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:RegistrationViewModel}">
                <v:RegistrationView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
