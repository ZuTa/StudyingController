@model ThinClient.Models.LessonsModel

@{
    ViewBag.Title = "Пари";
}

<table>
    <tr>
        <td>
            <div class="Label">Лекції:</div>
            @foreach (var lecture in this.Model.Lectures)
            {
                <div class="ListItem">
                    <table>
                        <tr>
                            <td>@lecture.Subject.Name</td>
                            <td>@Html.ActionLink(
                            "Відкрити",
                            "LectureView",
                            "ControlsManagement",
                            new { lectureId = ThinClient.Common.Encryptor.Encrypt(lecture.ID.ToString()) }, 
                            new { @class = "OpenIcon", style = "margin-left: 10px;" })</td>
                        </tr>
                    </table>
                </div>
            }
        </td>
    </tr>
    <tr>
        <td>
            <div class="Label">Практики:</div>
            @foreach (var practice in this.Model.Practices)
            {
                <div class="ListItem">
                    <table>
                        <tr>
                            <td>@practice.Name</td>
                            <td>@Html.ActionLink("Відкрити", "PracticeView", "ControlsManagement", new { practiceId = practice.ID }, new { @class = "OpenIcon", style = "margin-left: 10px;" })</td>
                        </tr>
                    </table>
                </div>
            }
        </td>
    </tr>
</table>